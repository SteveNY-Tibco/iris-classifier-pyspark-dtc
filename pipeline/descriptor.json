{
	"DeploymentGpID" : "model-ops-py-pipeline",
	"DataFlow" : [{
			"Upstream" : "s-0",
			"Downstream" : "pyspark-iris-classifier01"
		}, {
			"Upstream" : "pyspark-iris-classifier01",
			"Downstream" : "d-0"
		}
	],
    "Components":[
        {
            "Type":"Source",
            "Runtime":"flogo",
            "Name":"s-0",
			"Replicas": 1,
			"DockerImage" : "bigoyang/pipeline-datasource:0.3.0",
			"Volumes" : [
				{
					"Name" : "input",
					"MountPoint" : "/usr/local/Data"
				}
			],
            "Properties":[
            	{
                	"Name":"System.ID",
                	"Value":"$ID$"
                },
                {
                	"Name":"System.ServiceLocator",
                	"Value":"$ServiceLocator$"
                }
            ]
        },
        {
            "Type":"PythonModel",
            "Runtime":"python",
            "Name":"pyspark-iris-classifier01",
			"Replicas": 1,
			"DockerImage" : "bigoyang/pyspark-python-model:0.1.0",
			"Volumes" : [
				{
					"Name" : "artifacts",
					"MountPoint" : "/app/artifacts"
				}
			],
            "Properties":[
            		{
                		"Name":"Model",
                		"Value":"/app/artifacts/model.dtc"
            		},
            		{
                		"Name":"Labels",
                		"Value":"setosa,versicolor,virginica"
            		},
                {
                		"Name":"PythonModel_plugin",
                		"Value":"artifacts.inference"
                }
            ]
        },
        {
            "Type":"Destination",
            "Runtime":"flogo",
            "Name":"d-0",
			"Replicas": 1,
			"DockerImage" : "bigoyang/pipeline-datadesination:0.2.0",
			"Volumes" : [
				{
					"Name" : "output",
					"MountPoint" : "/usr/local/Output"
				}
			],
            "Properties":[
                {
                	"Name":".descriptor",
                	"Value":"C"
                }
            ]
        }
    ],
    "System" : {
    	"Volume" : [
    		{
    			"Name" : "input",
    			"Value" : "$temp.project.home$/input"
    		},	
    		{
    			"Name" : "artifacts",
    			"Value" : "$temp.project.home$/artifacts"
    		},	
    		{
    			"Name" : "output",
    			"Value" : "$temp.project.home$/output"
    		}	
    	]
    }
}
